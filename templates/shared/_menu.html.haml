.module-menu.main-module-menu
  %ul.main
    %li= nlink(:index, t.icons.home)

    - if session_user.admin?
      %li= nlink("backend_user_index".to_sym, t.icons.users)
  %ul.slice-list
    - [:snippets, :blog, :tumblog, :booking, :galleries, :zettel].each do |slice|
      - if Ha2itat.quart.plugins.enabled?(slice)
        %li= nlink("backend_#{slice}_index".to_sym, t.be.menu.send(slice))

