#BE-form
  %form{method: :post, action: action}
    %input.form-input{type: :hidden, value: (post && post.id ? post.id : ""), name: :id}
    .container
      .columns
        .column.col-6.col-md-12.col-mx-auto
          .input-group
            %span.input-group-addon= t.form.title
            %input.form-input{type: :text, name: "title", :value => (post ? post.title : "")}
          = t.form.optional_field
        .column.col-6.col-md-12.col-mx-auto
          .input-group
            %span.input-group-addon= t.form.tags
            %input.form-input.tags-input{type: :text, name: :tags, :value => (post && post.tags ? post.tags.join(", ") : "")}

      .columns.mtop
        .column.col-12
          %textarea.form-input{name: :content}
            = post && post.content
      .columns.mtop
        .column.col-2.col-mx-auto
          %input.form-input{type: :submit, value: t.form.submit}
