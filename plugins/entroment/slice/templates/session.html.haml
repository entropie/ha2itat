
%h1
  = t.be.topics.entroment.session
  %small #{deck.name}
  %small= session_html_progress(s)

- if lastcardid
  #lastcard.entroment-entry{"class": "rated-%s"%rated}
    = s.last_card.to_html(highlight: :back)

- if card
  = render "cardbuttons", card: card, deck: deck, sessionid: sessionid, s: s

  .backend-content.entroment-card
    .entroment-entry
      = card.to_html(collapsed: true)
- else
  .backend-content-entroment-box
    = nlink(path(:backend_entroment_session_end, name: deck.name, sessionid: sessionid), t.be.entroment.session_result)
