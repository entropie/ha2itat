%ul
  - if (deck rescue nil)
    %li.imp>= nlink(path(:backend_entroment_card, collapsed: 1, cardid: entry.id, name: deck.name), t.icons.play("be.links.entroment.show"), title: t.be.links.entroment.rate)
  %li.imp>= nlink(path(:backend_entroment_show, id: entry.id), t.icons.show("be.links.entroment.show"), title: t.be.links.entroment.show)
  %li>= nlink(path(:backend_entroment_edit, id: entry.id), t.icons.edit("be.links.entroment.edit"), title: t.be.links.entroment.edit)
  %li.warn>= nlink(path(:backend_entroment_destroy, id: entry.id, goto: path(:backend_entroment_index)), t.icons.destroy("be.links.entroment.destroy"), onclick: "return confirm('%s')" % t.be.ask.destroy)
