.backend-list-entry
  .backend-list-controls.floating
    %ul
      %li>= nlink(path(:backend_user_edit, user_id: usr.id), t.icons.edit("be.links.user.edit"), title: t.be.links.user.edit)
  .backend-list-head
    = nlink(rpath(:backend_user_show, user_id: usr.id), usr.name)
  .backend-list-content.acenter
    = usr.email
  .backend-list-additional.aright
    - usr.groups.each do |grp|
      = grp
