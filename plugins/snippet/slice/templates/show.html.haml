-# = render "preview", snippet: child_ele
%h2 
  Snippet
  %small
    %code #{snippet.ident}
    %small
      %a{href: path(:backend_snippet_edit, slug: snippet.slug)}
        edit

.snippet-content
  = snippet.render

- if snippet.page?
  - if not (snippet.children.empty? rescue true)
    .backend-listing
      .backend-list-entry
        .backend-listing
          - snippet.children.each do |child_ele|
            .backend-list-entry
              = nlink(path(:backend_snippet_show, slug: child_ele.slug), child_ele.slug)

